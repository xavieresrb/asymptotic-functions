{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-typescript/base", "plugin:@typescript-eslint/recommended", "plugin:eslint-comments/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": { "linebreak-style": ["error", "windows"], "comma-dangle": ["error", "never"] }
}
